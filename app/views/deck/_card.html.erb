<%= turbo_frame_tag 'deck_card' do %>
  <div class="mt-6">
    <% if @card %>
      <div class="relative bg-white rounded-2xl shadow-lg p-6 min-h-[280px] flex flex-col touch-none select-none"
           data-controller="swipe"
           data-swipe-position-value="<%= @position %>"
           data-swipe-total-value="<%= @total %>"
           data-swipe-next-url-value="<%= @position + 1 < @total ? deck_path(@position + 1) : '' %>"
           data-swipe-prev-url-value="<%= @position > 0 ? deck_path(@position - 1) : '' %>">
        <%= render 'deck/swipe_labels' %>
        <%= render 'deck/card_content' %>
      </div>
    <% else %>
      <%= render 'deck/empty_state' %>
    <% end %>
  </div>
<% end %>
